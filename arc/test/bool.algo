/*
Programme pour tester les booleens. 0 = FAUX , pas 0 = VRAI
*/

MAIN()
VAR a <- 5;
VAR b <- 10;
VAR c <- 2;
VAR d <- 7;
VAR e <- 3;
VAR f <- 8;
VAR g <- 4;
VAR h <- 1;
VAR res <- 0;
DEBUT
    // Comparaisons
    ECRIRE(a < b);        // Affiche 1 (Vrai)
    ECRIRE(a > b);        // Affiche 0 (Faux)
    ECRIRE(a = c);       // Affiche 0 (Faux)
    ECRIRE(a != c);       // Affiche 1 (Vrai)
    ECRIRE(b >= d);       // Affiche 1 (Vrai)
    ECRIRE(e <= c);       // Affiche 0 (Faux)

    // Logique
    ECRIRE((a < b) ET (b > c));     // Affiche 1 (Vrai)
    ECRIRE((a > b) OU (c < d));      // Affiche 1 (Vrai)
    ECRIRE(NON(a = c));             // Affiche 1 (Vrai)

    // Expressions complexes
    res <- ((a < b) ET ((d + e) > f)) OU (g <= h);
    ECRIRE(res);    // Affiche 1 (VRAI)


FIN